<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="30dp"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/color_padding"
    android:paddingBottom="@dimen/color_padding"
    android:background="@drawable/changable_panel_bg">

    <Button
        android:id="@+id/panel_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@drawable/panel_default"
        android:tag="panel_2" />

    <Button
        android:id="@+id/panel_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/panel_2"
        android:layout_marginTop="20dp"
        android:background="@drawable/panel_default"
        android:layout_centerHorizontal="true"
        android:tag="panel_3" />

    <Button
        android:id="@+id/panel_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/panel_3"
        android:layout_marginTop="20dp"
        android:background="@drawable/panel_default"
        android:layout_centerHorizontal="true"
        android:tag="panel_4" />

    <Button
        android:id="@+id/panel_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/panel_4"
        android:layout_marginTop="20dp"
        android:background="@drawable/panel_default"
        android:layout_centerHorizontal="true"
        android:tag="panel_5" />

    <Button
        android:id="@+id/panel_6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/panel_5"
        android:layout_marginTop="20dp"
        android:background="@drawable/panel_default"
        android:layout_centerHorizontal="true"
        android:tag="panel_6" />

    <Button
        android:id="@+id/btn_confirm"
        android:layout_width="@dimen/lamp_color_size"
        android:layout_height="@dimen/lamp_color_size"
        android:layout_below="@id/panel_6"
        android:layout_marginTop="20dp"
        android:background="@drawable/panel_confirm_selector"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>
