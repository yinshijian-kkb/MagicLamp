<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <Button
        android:id="@+id/btn_retreat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_centerVertical="true"
        android:background="@drawable/play_retreat_selector"/>


    <CheckBox
        android:id="@+id/cb_play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/btn_retreat"
        android:gravity="center"
        android:layout_marginLeft="20dp"
        android:button="@drawable/music_main_play_normal"
        android:background="@null" />


    <Button
        android:id="@+id/btn_forward"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/cb_play"
        android:gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_centerVertical="true"
        android:background="@drawable/play_forward_selector"/>

</RelativeLayout>