<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextViewFontStyle">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="music_syllable_style">
        <item name="android:indeterminateDrawable">@drawable/music_syllable</item>
        <item name="android:minWidth">23dp</item>
        <item name="android:minHeight">23dp</item>
        <item name="android:maxWidth">23dp</item>
        <item name="android:maxHeight">23dp</item>
    </style>

    <!-- 自定义toast样式 -->
    <style name="toast_anim" mce_bogus="2" parent="@android:style/Animation.Activity">
        <item name="android:windowEnterAnimation">@anim/toast_fade_in</item>
        <item name="android:windowExitAnimation">@anim/toast_fade_out</item>
    </style>

    <!-- loading dialog 样式 -->
    <style name="loading_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>
</resources>