<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="#FFFFFF"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF">

        <LinearLayout
            android:id="@+id/ll_loanding_more"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center"
            android:orientation="horizontal">

            <tcl.com.magiclamp.views.LoadingView
                android:id="@+id/bottom_refresh_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:text="正在加载更多..."
                android:textColor="@color/c_b7b7b7" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_no_more_data"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已显示全部"
                android:textColor="@color/c_b7b7b7" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_load_failed"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="加载失败,点击重试"
                android:textColor="@color/c_b7b7b7" />
        </LinearLayout>
    </FrameLayout>

</LinearLayout><!-- From: file:/Users/sjyin/openresource/MagicLamp/MagicLamp/src/main/res/layout/listview_footer.xml -->